{% extends 'base.html.twig' %}

{% block title %}Articlessss n° {{article.id}}{% endblock %}

{% block body %}

<div class="container">
    <h2 class="title p-1">{{ article.title }}</h2>
    <div class="img-fluid">
        <img width="60%" src="/assets/blog/images/{{ article.image }}" alt="{{ article.title }}">
    </div>
    <p class="content text-justify">
        {{ article.content | raw}} <!-- Pour ne pas afficher du HTML -->
    </p>
    <p class="date">Ecrit le {{ article.createdAt | date("d/m/Y") }} à {{ article.createdAt | date("H:i") }} par {{ article.author }}</p>
</div>   


{% endblock %}


